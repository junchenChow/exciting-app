<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="分享至" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvQzone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/btn_qqkongjian_normal"
                android:gravity="center"
                android:text="QQ空间"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvQFriend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/btn_qq_friends_normal"
                android:gravity="center"
                android:text="QQ好友"

                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvWechatFriend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/icon_wechat_normal"
                android:gravity="center"
                android:text="微信好友"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvWechat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/icon_wechat_friends_normal"
                android:gravity="center"
                android:text="微信朋友圈"
                android:textColor="@color/black" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvWeibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"
            android:background="?selectableItemBackgroundBorderless"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/icon_weibo_normal"
            android:gravity="center"
            android:padding="10dp"
            android:text="微博"
            android:textColor="@color/black"
            android:visibility="visible" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>